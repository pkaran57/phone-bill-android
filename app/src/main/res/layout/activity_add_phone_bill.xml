<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".app.activity.AddPhoneBillActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/customer_name_input"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.025"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:hint="Name"/>
    <TextView
            android:text="@string/add_phone_bill_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.054"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <Button
            android:text="Create Phone Bill For Customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/create_phone_bill_button"
            app:layout_constraintTop_toBottomOf="@+id/customer_name_input"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.163"/>
</androidx.constraintlayout.widget.ConstraintLayout>