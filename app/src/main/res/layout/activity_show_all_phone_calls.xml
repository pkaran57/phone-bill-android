<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".app.activity.ShowAllPhoneCallsActivity">
    <TextView
            android:text="@string/add_phone_bill_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/textView7"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.054"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <EditText
            android:layout_width="256dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/customer_name_input_2"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:hint="Customer Name"
            app:layout_constraintHorizontal_bias="0.692"
            app:layout_constraintEnd_toStartOf="@+id/search_phone_bill_button" android:layout_marginTop="16dp"/>
    <Button
            android:text="Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/search_phone_bill_button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginEnd="28dp"/>
    <ListView
            android:layout_width="363dp"
            android:layout_height="572dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customer_name_input_2" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.416" android:id="@+id/phone_calls_list"/>
</androidx.constraintlayout.widget.ConstraintLayout>